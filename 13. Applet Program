package assignment13; 
import java.applet.*; 
import java.awt.*; 

/* 
 <applet code="Assignment13" width=400 height=400> 
 </applet> 
*/ 

public class Assignment13 extends Applet { 
    public void paint(Graphics g) { 
        g.setColor(Color.blue); 
        g.drawString("Hello, Welcome to Applet Programming", 50, 50); 

        g.setColor(Color.red); 
        g.drawRect(60, 60, 200, 100); 

        g.setColor(Color.green); 
        g.fillOval(100, 200, 150, 100); 

        g.setColor(Color.magenta); 
        g.drawLine(50, 350, 300, 350); 
    } 
}
