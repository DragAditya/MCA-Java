package assignment12; 
import java.sql.*; 

public class Assignment12 { 
    public static void main(String[] args) { 
        try { 
            // Load Driver 
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver"); 

            // Establish Connection 
            Connection con = DriverManager.getConnection("jdbc:odbc:studentDSN","username","password"); 

            // Create Statement 
            Statement st = con.createStatement(); 

            // Insert Record 
            st.executeUpdate("insert into student values(1,'Aditya','BCA')"); 
            st.executeUpdate("insert into student values(2,'Rohit','MCA')"); 

            // Select Records 
            ResultSet rs = st.executeQuery("select * from student"); 
            while(rs.next()) { 
                System.out.println("Roll: " + rs.getInt(1)); 
                System.out.println("Name: " + rs.getString(2)); 
                System.out.println("Course: " + rs.getString(3)); 
            } 

            // Update Record 
            st.executeUpdate("update student set name='Rahul' where roll=2"); 

            // Delete Record 
            st.executeUpdate("delete from student where roll=1"); 

            con.close(); 
        } 
        catch(Exception e) { 
            System.out.println("Error: " + e); 
        } 
    } 
}
